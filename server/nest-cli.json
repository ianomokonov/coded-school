{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "/mail/templates",
        "outDir": "dist/src"
      },
      {
        "include": "/tasks",
        "outDir": "dist/src"
      }
    ],
    "watchAssets": true,
    "plugins": ["@nestjs/swagger", "@automapper/classes/transformer-plugin"]
  }
}
